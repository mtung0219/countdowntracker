<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HelloWorld" parent="Theme.AppCompat.DayNight.DarkActionBar">

        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:itemTextAppearance">@style/MyActionBar.MenuTextStyle</item>
        <item name="android:itemBackground">@color/main_500</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item>
        <item name="cardViewStyle">@style/card_background</item>
        <item name="android:textViewStyle">@style/text_view_style_main_card</item>
        <item name="editTextStyle">@style/myEditText_Night</item>
        <item name="android:textColorHint">@color/main_500</item>
        <item name="android:textCursorDrawable">@null</item>

        <item name="colorPrimary">@color/main_600</item>
        <item name="android:textColorPrimary">@color/main_200</item>
        <item name="colorPrimaryVariant">@color/green_background</item>
        <item name="colorOnPrimary">@color/purple_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <!--<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->

        <!--<item name="android:background">@color/coolgrey_600</item>-->

        <item name="android:windowBackground">@color/main_900</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/main_700</item>
        <item name="android:colorPrimaryDark" tools:targetApi="l">@color/main_800</item>

    </style>


    <style name="ThemeOverlay.HelloWorld.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/light_blue_900</item>
        <item name="appWidgetTextColor">@color/light_blue_200</item>
    </style>



    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/main_700</item>
        <item name="titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>
    </style>

    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:tint">@color/main_200</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/main_200</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <!-- style for action bar menu item texts -->
    <style name="MyActionBar.MenuTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/main_200</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <!--<item name="android:textSize">25sp</item> -->
    </style>


</resources>