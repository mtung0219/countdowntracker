<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HelloWorld" parent="Theme.AppCompat.DayNight.DarkActionBar">

        <item name="actionBarStyle">@style/MyActionBarDay</item>
        <item name="android:itemTextAppearance">@style/MyActionBar.MenuTextStyleDay</item>
        <item name="android:itemBackground">@drawable/menuitem_day</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:buttonStyle">@style/AppTheme.ButtonDay</item>
        <item name="cardViewStyle">@style/card_background_day</item>
        <item name="android:textViewStyle">@style/text_view_style_main_card_day</item>
        <item name="editTextStyle">@style/myEditText_Day</item>
        <item name="android:textColorHint">@color/main_500</item>
        <item name="android:textCursorDrawable">@null</item>

        <item name="colorPrimary">@color/main_500</item>
        <item name="android:textColorPrimary">@color/main_800</item>
        <item name="colorPrimaryVariant">@color/green_background</item>
        <item name="colorOnPrimary">@color/purple_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <!--<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->

        <!--<item name="android:background">@color/coolgrey_600</item>-->

        <item name="android:windowBackground">@color/main_200</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/main_400</item>
        <item name="android:colorPrimaryDark" tools:targetApi="l">@color/main_800</item>


    </style>

    <style name="Theme.HelloWorld.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HelloWorld.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HelloWorld.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- WIDGET THEME -->
    <style name="ThemeOverlay.HelloWorld.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/blue_background</item>
        <item name="appWidgetTextColor">@color/light_blue_50</item>
    </style>


    <style name="MyActionBarDay" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/main_400</item>
        <item name="titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyleDay</item>
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>
    </style>


    <style name="MyTheme.ActionBar.TitleTextStyleDay" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/main_800</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <!--<item name="android:textStyle">bold</item> -->
    </style>

    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:tint">@color/main_200</item>
    </style>


    <style name="MyActionBar.MenuTextStyleDay" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/main_800</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <!--<item name="android:textSize">25sp</item> -->
    </style>

    <style name="myOverflowMenu" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="background">@color/blue_background</item>
    </style>
</resources>