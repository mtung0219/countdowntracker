<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HelloWorld" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:fontFamily">sans-serif-light</item>

        <item name="colorPrimary">@color/teal_700</item>
        <item name="android:textColorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/green_background</item>
        <item name="colorOnPrimary">@color/purple_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <!--<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->

        <!--<item name="android:background">@color/coolgrey_600</item>-->

        <item name="android:windowBackground">@color/darkgrey_900</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/darkgrey_700</item>
        <item name="android:colorPrimaryDark" tools:targetApi="l">@color/darkgrey_800</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HelloWorld.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HelloWorld.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HelloWorld.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeOverlay.HelloWorld.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/white</item>
        <item name="appWidgetTextColor">@color/light_blue_50</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/darkgrey_700</item>
        <item name="titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/darkgrey_200</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:tint">@color/teal_700</item>
    </style>
</resources>